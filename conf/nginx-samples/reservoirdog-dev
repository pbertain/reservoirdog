# NGINX configuration for Reservoir Dog - Dev Environment
# Place this file in /etc/nginx/sites-available/
# Create symlink: ln -s /etc/nginx/sites-available/reservoirdog-dev /etc/nginx/sites-enabled/

server {
    listen 80;
    server_name host78.nird.club;

    # Redirect HTTP to HTTPS (if SSL is configured)
    # return 301 https://$server_name$request_uri;

    # Or serve directly on HTTP for dev
    location / {
        proxy_pass http://127.0.0.1:45081;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket support (if needed)
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    # Static files (if serving directly)
    location /static {
        alias /opt/dev/reservoirdog/static;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }

    # Images
    location /images {
        alias /opt/dev/reservoirdog/references/images;
        expires 7d;
    }

    # Logging
    access_log /var/log/nginx/reservoirdog-dev-access.log;
    error_log /var/log/nginx/reservoirdog-dev-error.log;
}

